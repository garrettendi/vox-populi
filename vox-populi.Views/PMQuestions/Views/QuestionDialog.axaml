<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="vox_populi.Avalonia.QuestionDialog"
        Title="QuestionDialog">
	<StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
    	<TextBlock Text="QUESTION" HorizontalAlignment="Left"></TextBlock>
		<Grid HorizontalAlignment="Stretch" ColumnDefinitions="Auto,*">
			<TextBlock Text="Response" Grid.Column="0"/>
			<ComboBox Grid.Column="1" HorizontalAlignment="Stretch"/>
		</Grid>
	</StackPanel>
</Window>
